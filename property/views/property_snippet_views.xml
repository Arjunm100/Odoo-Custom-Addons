<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="property_latest_template" name="Latest Properties">
        <section class="latest_property_snippet">
           <div class="ref-arrival-content">
                <p class="ref-section_head ref-centerhead__underline ref-head--primary"
                   style="color: #0d5272;"><br/><br/>
                </p>
            </div>
            <div id="latest_property_carousel"/>
            <br/>
            <br/>
        </section>
    </template>
    <template id="property_snippet" inherit_id="website.snippets" name="Latest Property Snippet">
        <xpath expr="//t[@id='installed_snippets_hook']"
                       position="after">
                    <t t-snippet="property.property_latest_template" t-thumbnail="/property/static/src/image/IMG.jpeg"/>
        </xpath>
    </template>
</odoo>
